---
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Legacy from '../components/Legacy.astro';
import Presentation from '../components/Presentation.astro';
import Process from '../components/Process.astro';
import Projects from '../components/Projects.astro';
import Services from '../components/Services.jsx';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import '../styles/global.css';
---

<html lang='en' class='scroll-smooth'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>gabrielsilvadev | Software House</title>
  </head>

  <body>
    <main class='relative flex flex-col items-center w-screen h-full min-h-screen overflow-hidden sm:w-full bg-secondaryBrand selection:bg-brand'>
      <WhatsAppButton />
      <Header />
      <Presentation />
      <Services client:load />
      <Legacy />
      <Process />
      <Projects />
      <About />
      <Contact />
      <Footer />
    </main>
  </body>
</html>