---
export interface Props {
  text: string,
  Icon?: string,
  id?: string,
  extraStyles: string,
  arrow?: boolean,
}

const { id, text, Icon, extraStyles, arrow } = Astro.props;
---

<button id={id} class={"flex items-center justify-center gap-3 w-min md:whitespace-nowrap px-4 py-[0.5rem] lg:py-4 text-sm md:text-[16px] font-helveticaNowTextMedium leading-4 rounded-full " + extraStyles}>
  {text}
  {Icon && <img src={Icon} alt="" class="w-5 h-5" />}
  {arrow && <img src="icons/black-arrow-icon.svg" alt="" />}
</button>