---
export interface Props {
  icon: { path: string, description: string },
  title: string,
  description: string
}

const { icon, title, description } = Astro.props;
---

<div class="flex flex-col h-full gap-5 p-10 transition duration-500 bg-white border rounded-lg cursor-default max-h-max border-black/50 hover:border-r-2 hover:border-b-2 hover:border-b-brand hover:border-r-brand">
  <header class="flex items-center gap-2">
    <img class="h-7 w-7" src={icon.path} alt={icon.description}>
    <h2 class="text-2xl text-black font-matterSemiBold">{title}</h2>
  </header>
  <section>
    <p class="text-[15px] text-gray-600 font-matterRegular">{description}</p>
  </section>
</div>